<?xml version="1.0" encoding="utf-8"?>
<mx:TitleWindow xmlns:mx="http://www.adobe.com/2006/mxml"
				layout="vertical"
				width="300"
				height="400"
				modalTransparency="0.5"
				modalTransparencyBlur="5"
				titleStyleName="twTitleStyle"
				title="{verifyRecord.hzmc+'-'+verifyRecord.rq}"
				close="close()"
				paddingLeft="0"
				paddingRight="0"
				paddingBottom="0"
				paddingTop="0"
				showCloseButton="true"
				xmlns:common="org.just.xch.view.component.common.*">
	<mx:Script>
		<![CDATA[
			import org.just.xch.control.events.domain.MedMonitorEvent;
			import org.just.xch.model.domain.MedMonitorRecord;
			import org.just.xch.utils.Constant;

			import mx.managers.PopUpManager;

			[Bindable]
			public var verifyRecord:MedMonitorRecord;
			[Bindable]
			public var jkdxFlag:int=0;

			private function close():void
			{
				PopUpManager.removePopUp(this);
			}

			private function save():void
			{
				new MedMonitorEvent(MedMonitorEvent.EVENT_UPDATE_AFTERVERIFY, [jkdxFlag, verifyRecord.id, MedMonitorRecord.ZT_3, shlyPara.text]).dispatch();
				close();
			}
		]]>
	</mx:Script>

	<mx:VBox width="100%"
			 height="100%"
			 verticalAlign="middle"
			 paddingLeft="5"
			 paddingRight="5">
		<mx:CheckBox id="cxBox"
					 label="是否计入诚信评分"
					 selected="true"/>
		<mx:VBox width="100%"
				 height="100%"
				 enabled="{cxBox.selected==true?true:false}"
				 paddingLeft="60">
			<mx:Label text="违规理由:"
					  color="red"/>
			<mx:CheckBox label="购药次数过多"
						 selected="false"
						 color="red"/>
			<mx:CheckBox label="购药品种过多"
						 selected="false"
						 color="red"/>
			<mx:CheckBox label="购药金额过大"
						 selected="false"
						 color="red"/>
			<mx:CheckBox label="购药剂量过大"
						 selected="false"
						 color="red"/>
			<mx:CheckBox label="其他"
						 selected="false"
						 color="red"/>
		</mx:VBox>
		<mx:Label text="补充说明:"/>
		<mx:TextArea id="shlyPara"
					 width="100%"
					 height="100%"/>
		<mx:HBox width="100%"
				 height="38"
				 verticalAlign="middle"
				 horizontalAlign="center">
			<common:BtnSubmit label="确认"
							  click="save()"/>
			<common:BtnCancel click="close()"/>
		</mx:HBox>
	</mx:VBox>
</mx:TitleWindow>
